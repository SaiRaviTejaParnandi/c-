#include<iostream>
#include<string>
using namespace std;
int main()
{
	string name;
	cout<<"enter the name"<<endl;
	getline(cin,name);
	cout<<"the name you enterd is "<<name<<endl;
	for (int i=0;i<name.size();++i)
	{
		if(name[i]>='A'&& name[i]<='Z')
		{
			name[i]=name[i]+32;
		}
	}
	cout<<"after converting string  into lower case letters\n"<<name<<endl;
	return 0 ;
}
